<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/foodItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:elevation="8dp"
        android:fontFamily="@font/roboto_bold"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:text="LKR 300"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/foodItemImage"
        app:layout_constraintTop_toTopOf="@+id/foodItemImage" />

    <ImageView
        android:id="@+id/foodItemImage"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/foodItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Food Name"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/foodItemImage"
        app:layout_constraintStart_toStartOf="@+id/foodItemImage"
        app:layout_constraintTop_toBottomOf="@+id/foodItemImage" />

    <TextView
        android:id="@+id/foodItemDescription"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_light"
        android:text="Small Description"
        app:layout_constraintEnd_toEndOf="@+id/foodItemName"
        app:layout_constraintStart_toStartOf="@+id/foodItemName"
        app:layout_constraintTop_toBottomOf="@+id/foodItemName" />

    <Button
        android:id="@+id/foodItemAddToCart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:text="Add To Cart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/foodItemDescription"
        app:layout_constraintStart_toStartOf="@+id/foodItemDescription"
        app:layout_constraintTop_toBottomOf="@+id/foodItemDescription"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/foodItemItemCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Added to Cart"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/foodItemDescription"
        app:layout_constraintStart_toStartOf="@+id/foodItemDescription"
        app:layout_constraintTop_toBottomOf="@+id/foodItemDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>